/*
    esp.json - ESP configuration file
 */
{
    name: 'esptest',
    description: 'ESP Unit Tests with Server',
    http: {
        server: {
            listen: [
                'http://127.0.0.1:4100',
            ],
            "log": {
                "location": "error.log",
                "level": 4
            },
        },
        "trace": {
            "location": "trace.log",
            "level": 4
        },
        routes: [
            {
                pattern: '^/solo/{action}$',
                methods: [ 'GET', 'POST' ],
                source: 'solo.c',
                target: 'solo/$1',
                pipeline: {
                    handlers: 'espHandler',
                },
                limits: {
                    rxBody: 'unlimited',
                }
            }
        ]
    }
}
